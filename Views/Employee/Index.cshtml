@model IEnumerable<ParsTech.Web.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                <a asp-controller="Employee"  asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Employee</a>
            </th>
            <th>
                Assign & View Projects
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDEmployee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName
           )
            </td>

            <td>
                <a asp-controller="Employee" asp-action="AddOrEdit" asp-route-id="@item.IDEmployee"><i class="fa fa-marker fa-lg"></i></a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.IDEmployee" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i></a>

            </td>
            <td>
                <a asp-controller="EmpProject" asp-action="ViewProject" asp-route-id="@item.IDEmployee">AssignProject</a>
                <a asp-controller="EmpProject" asp-action="EmpProjList" asp-route-id="@item.IDEmployee"  >ViewProject</a>

            </td>
        </tr>
        }
    </tbody>
</table>

